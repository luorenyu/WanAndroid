/* pages/chapter/chapter.wxss */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.top-nav-container{  
  width: 100%;  
  height: 60rpx;  
  line-height: 60rpx;  
  font-size: 14px;  
  background-color: #2F92E8;  
  vertical-align: middle;  
  white-space: nowrap;  
}  
  
.top-nav-container .tab-item{  
  color: #ffffff99;
  display: inline-block;  
  margin: 0rpx 30rpx;  
}  
  
.top-nav-container .tab-item.active{  
  color: #fff;  
  border-bottom:  solid #fff;  
  line-height: 40rpx;  
}  
  
.swiper-container{  
  height: calc(100vh - 60rpx);  
  background-color: #f5f5f5;  
  font-size: 14px;  
}  