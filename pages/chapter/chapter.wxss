/* pages/chapter/chapter.wxss */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.top-nav-container{  
  width: 100%;  
  height: 60rpx;  
  line-height: 60rpx;  
  font-size: 14px;  
  background-color: #2F92E8;  
  vertical-align: middle;  
  white-space: nowrap;  
}  
  
.top-nav-container .tab-item{  
  color: #ffffff99;
  display: inline-block;  
  margin: 0rpx 30rpx;  
}  
  
.top-nav-container .tab-item.active{  
  color: #fff;  
  border-bottom:  solid #fff;  
  line-height: 40rpx;  
}  
  
.swiper-container{  
  height: calc(100vh - 60rpx);  
  background-color: #f5f5f5;  
  font-size: 14px;  
}  


.feed-item{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  box-shadow: 0px 1px 1px #a3a2a2;
  background: #fff;
  margin-bottom: 12px;
  width: 100%;
}

.feed-item-pressed{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  box-shadow: 0px 1px 3px #a3a2a2;
  background: #f5f5f5;
  margin-bottom: 12px;
  width: 100%;
}
.fedd-source{
  flex: 1;
}
.userinfo-avatar {
  width: 24px;
  height: 24px;
  margin-top: 6px;
  margin-left: 11px;
  margin-right: 6px;
  border-radius: 8%
}
.author{
  font-size: 10pt;
  position:relative;
  bottom: 5px
}
.nicedate{
  font-size: 10pt;
  position:absolute;
  right: 8px;
  margin-top: 10px;
  color: #999999
}
.item_title{
  flex: 2;
  font-size: 13pt;
  font-weight:550
}
.wrap-chapter{
  padding-top: 8px;
  flex: 1;
  display: flex;
  flex-direction:row;
  padding-bottom: 8px;
}
.item-chapter{
  flex: 9;
  margin-left:12px;
  font-size:11pt;
  color:#2F92E8;
}
.item-collection{
  flex: 1;
  width: 24px;
  height: 24px;
}