/* pages/main/main.wxss */

Page {
  background: #f5f5f5;
  color: #333;
  width: 100%;
  height: 100%;
}
.feed-item-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-shadow: 0px 1px 1px #a3a2a2;
  background: #fff;
  margin-top: 8px;
  margin-bottom: 12px;
  width: 100%;
}

.feed-item-container-pressed{
 display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-shadow: 0px 1px 4px #a3a2a2;
  background: #f5f5f5;
  margin-top: 8px;
  margin-bottom: 12px;
  width: 100%;
}

.feed-item {
  flex: 9;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.title {
  flex: 1;
  width: 100%;
  font-size: 14pt;
  font-weight: 600;
  /* position: absolute; */
  margin-top: 12px;
  margin-left: 12px;
}

.content {
  word-spacing: 12px;
  flex: 1;
  /* position: relative; */
  margin: 12px;
  font-size: 10pt;
}

.img{
  align-self: center;
  height: 24px;
  flex: 1
}
